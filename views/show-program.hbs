{{>header}}
<title>BabyCare - {{program.metaTitle}}</title>
<meta name="description" content={{program.metaDescription}}>
<meta name="keywords" content={{program.metaKeywords}}>
{{>navbar}}

{{>hero}}

<div class="container-fluid program py-4">
    <div class="row mx-3">
        <div class="col-md-9">
            <h4 class="bg-primary p-2 text-light text-center">{{program.name}}</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Program Fee</th>
                        <th>Seats</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>&#8377;{{program.fee}}</td>
                        <td>{{program.seats}}</td>
                        <td>{{program.duration}} Hours</td>
                    </tr>
                </tbody>
            </table>
            <p class="text-justify mb-3">{{program.shortDescription}}</p>
            <img src="/{{program.cover}}" height="400px" width="100%" alt="">
            <div class="card my-3 p-3">
                <p class="text-justify">{{{program.longDescription}}}</p>
            </div>
        </div>
        <div class="col-md-3">
            <h4 class="text-light text-center  p-2 bg-primary">Our Other Programs</h4>
            {{#each allPrograms}}
            <a href="/program/{{_id}}" class="d-block bg-primary p-2 mb-1 fs-5 text-light">{{name}}</a>
            {{/each}}
        </div>
    </div>
</div>










{{>footer}}