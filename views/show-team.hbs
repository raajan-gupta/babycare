{{>header}}
<title>BabyCare - {{team.metaTitle}}</title>
<meta name="description" content={{team.metaDescription}}>
<meta name="keywords" content={{team.metaKeywords}}>
{{>navbar}}

{{>hero}}

<div class="container-fluid team py-4">
    <div class="row mx-3">
        <div class="col-md-6">
            <h4 class="bg-primary p-2 text-light text-center">{{team.name}}</h4>
            <p class="text-justify mb-3">{{team.shortDescription}}</p>
            <img src="/{{team.pic}}" height="400px" width="100%" alt="">
            <table class="table mt-2">
                <thead>
                    <tr>
                        <th>Facebook</th>
                        <th>Instagram</th>
                        <th>Linkedin</th>
                        <th>Twitter</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a class="share-link btn-primary btn-md-square text-white rounded-circle me-3"
                                href="{{team.facebook}}" target="_blank"><i class="fa fa-facebook"></i></a></td>
                        <td><a class="share-link btn-primary btn-md-square text-white rounded-circle me-3"
                                href="{{team.instagram}}" target="_blank"><i class="fa fa-instagram"></i></a></td>
                        <td><a class="share-link btn-primary btn-md-square text-white rounded-circle me-3"
                                href="{{team.linkedin}}" target="_blank"><i class="fa fa-linkedin"></i></a></td>
                        <td><a class="share-link btn-primary btn-md-square text-white rounded-circle me-3"
                                href="{{team.twitter}}" target="_blank"><i class="fa fa-twitter"></i></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h4 class="text-light text-center  p-2 bg-primary">Our Other Teams</h4>
            {{#each allTeams}}
            <a href="/team/{{_id}}" class="d-block bg-primary p-2 mb-1 fs-5 text-light">{{name}}</a>
            {{/each}}
        </div>
    </div>
</div>


{{>footer}}